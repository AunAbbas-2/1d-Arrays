#include<iostream>
using namespace std;

int main(){
    int n;
    cout<<"Enter the number elements in array: ";
    cin>>n;
    if(n>50){
        cout<<"Enter Again the numbers are exceeding the count if 50";
    }

    int count = 0;
    int arr[n];
    for(int i = 0;i<n;i++){
        cin>>arr[i];
    }

for(int i = 0;i<n;i++){
    if(arr[i] % 2 == 0){
       count++;
    }
}
cout<<"Number of even numbers: "<<count;

    return 0;
}
